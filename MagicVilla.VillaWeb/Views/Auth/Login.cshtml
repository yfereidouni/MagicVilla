@using MagicVilla.VillaWeb.Models.DTOs
@model LoginRequestDTO

<h1>Login</h1>
<form asp-controller="Auth" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="UserName" type="text" placeholder="Username..." />
    <input asp-for="Password" type="text" placeholder="Password..." />
    <button type="submit" value="Submit">Login</button>
</form>

@section Scripts{
    <partial name="_ValidationSciptsPartial" />
}